{
  "name": "rougin/gable",
  "description": "A simple HTML table generator in PHP.",
  "homepage": "https://github.com/rougin/gable",
  "license": "MIT",
  "authors":
  [
    {
      "email": "rougingutib@gmail.com",
      "name": "Rougin Gutib"
    }
  ],
  "require":
  {
    "php": ">=5.3.0"
  },
  "require-dev":
  {
    "phpunit/phpunit": "*",
    "sanmai/phpunit-legacy-adapter": "*"
  },
  "autoload":
  {
    "psr-4":
    {
      "Rougin\\Gable\\": "src"
    }
  },
  "autoload-dev":
  {
    "psr-4":
    {
      "Rougin\\Gable\\": "tests"
    }
  },
  "scripts":
  {
    "analyze": "phpstan analyse",
    "restyle": "php-cs-fixer fix --config=phpstyle.php",
    "test": "phpunit"
  }
}
